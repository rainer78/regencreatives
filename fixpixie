<script>
    document.getElementById('sendButton').addEventListener('click', function() {
        const userInputField = document.getElementById('userInput');
        const userText = userInputField.value.trim();
        if (userText === '') return;

        addMessageToChat('user', userText);
        userInputField.value = ''; // Clear input field after sending

        // Example API call to a chatbot service
        const API_ENDPOINT = 'https://example.com/chatbot/api';
        const postData = {
            message: userText,
            // Include any other data required by the API
        };

        fetch(API_ENDPOINT, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                // Include API key or authentication token if required
            },
            body: JSON.stringify(postData)
        })
        .then(response => response.json())
        .then(data => {
            const botResponse = data.reply; // Adjust this according to the actual response structure
            addMessageToChat('bot', botResponse);
        })
        .catch(error => {
            console.error('Error talking to the chatbot API:', error);
            addMessageToChat('bot', 'Sorry, I am unable to respond at the moment.');
        });
    });

    document.getElementById('userInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            document.getElementById('sendButton').click();
        }
    });

    function addMessageToChat(who, text) {
        const chatArea = document.getElementById('chatArea');
        const messageElement = document.createElement('div');
        messageElement.classList.add('p-2', who === 'user' ? 'bg-blue-200' : 'bg-green-200', 'my-2', 'rounded');
        messageElement.textContent = text;
        chatArea.appendChild(messageElement);
        chatArea.scrollTop = chatArea.scrollHeight; // Scroll to the bottom to show latest message
    }
</script>
